@model GancewskaKerebinska.CeramicsCatalogue.Interfaces.Entities.ICeramicItem

@{
    ViewData["Title"] = "Delete Product";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-danger text-white pt-3 pb-3">
                <h2 class="card-title h5 mb-0">Delete Product</h2>
            </div>
            <div class="card-body">
                <div class="alert alert-warning border-0 bg-warning bg-opacity-10 text-warning-emphasis" role="alert">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Are you sure you want to delete this product? This action cannot be undone.
                </div>

                <div class="mb-4">
                    <h4 class="h5 mb-3">@Model.Name</h4>
                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted fw-normal">Ceramic Type</dt>
                        <dd class="col-sm-8 fw-medium">@Model.CeramicType</dd>

                        <dt class="col-sm-4 text-muted fw-normal">Firing Type</dt>
                        <dd class="col-sm-8 fw-medium">@Model.FiringType</dd>

                        <dt class="col-sm-4 text-muted fw-normal">Producer</dt>
                        <dd class="col-sm-8 fw-medium">@Model.Producer?.Name</dd>
                        
                        <dt class="col-sm-4 text-muted fw-normal">Description</dt>
                        <dd class="col-sm-8 text-muted">@Model.Description</dd>
                    </dl>
                </div>

                <form asp-action="Delete" class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <input type="hidden" asp-for="Id" />
                    <a asp-action="Index" class="btn btn-light me-md-2">Cancel</a>
                    <button type="submit" class="btn btn-danger px-4">Delete Product</button>
                </form>
            </div>
        </div>
    </div>
</div>
