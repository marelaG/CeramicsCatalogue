@model GancewskaKerebinska.CeramicsCatalogue.DAO.Entities.CeramicItemDo
@using GancewskaKerebinska.CeramicsCatalogue.Core.Enums

@{
    ViewData["Title"] = "Create Product";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm border-0">
            <div class="card-header bg-white border-bottom-0 pt-4 pb-0">
                <h2 class="card-title h4 mb-0">Create New Product</h2>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="form-floating mb-3">
                        <input asp-for="Name" class="form-control" placeholder="Product Name" />
                        <label asp-for="Name">Product Name</label>
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <textarea asp-for="Description" class="form-control" placeholder="Description" style="height: 100px"></textarea>
                        <label asp-for="Description">Description</label>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-floating mb-3">
                        <input asp-for="ImagePath" class="form-control" placeholder="Image URL" />
                        <label asp-for="ImagePath">Image URL</label>
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>

                    <div class="row g-2 mb-3">
                        <div class="col-md">
                            <div class="form-floating">
                                <select asp-for="CeramicType" class="form-select" asp-items="Html.GetEnumSelectList<CeramicType>()"></select>
                                <label asp-for="CeramicType">Ceramic Type</label>
                                <span asp-validation-for="CeramicType" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md">
                            <div class="form-floating">
                                <select asp-for="FiringType" class="form-select" asp-items="Html.GetEnumSelectList<FiringType>()"></select>
                                <label asp-for="FiringType">Firing Type</label>
                                <span asp-validation-for="FiringType" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="form-floating mb-4">
                        <select asp-for="ProducerId" class="form-select" asp-items="ViewBag.Producers"></select>
                        <label asp-for="ProducerId">Producer</label>
                        <span asp-validation-for="ProducerId" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-light me-md-2">Cancel</a>
                        <button type="submit" class="btn btn-primary px-4">Create Product</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
