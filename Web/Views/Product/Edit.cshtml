@model GancewskaKerebinska.CeramicsCatalogue.Interfaces.Entities.ICeramicItem
@using GancewskaKerebinska.CeramicsCatalogue.Core.Enums

@{
    ViewData["Title"] = "Edit Product";
}

<h1>Edit Product</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mb-3">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ImagePath" class="control-label"></label>
                <input asp-for="ImagePath" class="form-control" />
                <span asp-validation-for="ImagePath" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="CeramicType" class="control-label"></label>
                <select asp-for="CeramicType" class="form-control" asp-items="Html.GetEnumSelectList<CeramicType>()"></select>
                <span asp-validation-for="CeramicType" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="FiringType" class="control-label"></label>
                <select asp-for="FiringType" class="form-control" asp-items="Html.GetEnumSelectList<FiringType>()"></select>
                <span asp-validation-for="FiringType" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="ProducerId" class="control-label">Producer</label>
                <select asp-for="ProducerId" class="form-control" asp-items="ViewBag.Producers"></select>
                <span asp-validation-for="ProducerId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
