@model GancewskaKerebinska.CeramicsCatalogue.Interfaces.Entities.IProducer

@{
    ViewData["Title"] = "Delete Producer";
}

<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header bg-danger text-white">
            <h5 class="modal-title">Delete Producer</h5>
        </div>
        <div class="modal-body">
            <p>Are you sure you want to delete <strong>@Model.Name</strong>?</p>
            <p class="text-danger"><small>This action cannot be undone.</small></p>
        </div>
        <div class="modal-footer">
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                <button type="submit" class="btn btn-danger">Delete</button>
            </form>
        </div>
    </div>
</div>
