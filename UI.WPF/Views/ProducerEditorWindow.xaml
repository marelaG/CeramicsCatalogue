<Window x:Class="GancewskaKerebinska.CeramicsCatalogue.UI.WPF.Views.ProducerEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Producer Editor" Height="250" Width="350" WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Label Content="Name:" Grid.Row="0"/>
        <TextBox x:Name="NameTextBox" Grid.Row="0" Margin="100,0,0,5"/>

        <Label Content="Country:" Grid.Row="1"/>
        <ComboBox x:Name="CountryComboBox" Grid.Row="1" Margin="100,0,0,5"/>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Content="Save" Click="Save_Click" Width="80" Margin="5"/>
            <Button Content="Cancel" IsCancel="True" Width="80" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>