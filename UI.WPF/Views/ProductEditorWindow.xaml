<Window x:Class="GancewskaKerebinska.CeramicsCatalogue.UI.WPF.Views.ProductEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Product Editor" Height="500" Width="450" WindowStartupLocation="CenterScreen"
        Background="#F3F4F6">
    
    <Border Background="White" Margin="24" CornerRadius="12" Padding="24">
        <Border.Effect>
            <DropShadowEffect Color="Black" Direction="270" ShadowDepth="4" Opacity="0.1" BlurRadius="20"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Edit Product" Grid.Row="0" Grid.ColumnSpan="2" FontSize="20" FontWeight="Bold" Foreground="{StaticResource PrimaryColor}" Margin="0,0,0,20"/>

            <Label Content="Name" Grid.Row="1" Grid.Column="0" Style="{StaticResource EditorLabelStyle}" Margin="0,0,16,16"/>
            <TextBox x:Name="NameTextBox" Grid.Row="1" Grid.Column="1" Style="{StaticResource EditorTextBoxStyle}" Margin="0,0,0,16"
                     Text="{Binding Name, UpdateSourceTrigger=PropertyChanged, ValidatesOnDataErrors=True}"/>

            <Label Content="Image Path" Grid.Row="2" Grid.Column="0" Style="{StaticResource EditorLabelStyle}" Margin="0,0,16,16"/>
            <TextBox x:Name="ImagePathTextBox" Grid.Row="2" Grid.Column="1" Style="{StaticResource EditorTextBoxStyle}" Margin="0,0,0,16"
                     Text="{Binding ImagePath, UpdateSourceTrigger=PropertyChanged}"/>

            <Label Content="Ceramic Type" Grid.Row="3" Grid.Column="0" Style="{StaticResource EditorLabelStyle}" Margin="0,0,16,16"/>
            <ComboBox x:Name="TypeComboBox" Grid.Row="3" Grid.Column="1" Style="{StaticResource EditorComboBoxStyle}" Margin="0,0,0,16"
                      ItemsSource="{Binding CeramicTypes}" SelectedItem="{Binding CeramicType}"/>

            <Label Content="Firing Type" Grid.Row="4" Grid.Column="0" Style="{StaticResource EditorLabelStyle}" Margin="0,0,16,16"/>
            <ComboBox x:Name="FiringComboBox" Grid.Row="4" Grid.Column="1" Style="{StaticResource EditorComboBoxStyle}" Margin="0,0,0,16"
                      ItemsSource="{Binding FiringTypes}" SelectedItem="{Binding FiringType}"/>

            <Label Content="Producer" Grid.Row="5" Grid.Column="0" Style="{StaticResource EditorLabelStyle}" Margin="0,0,16,16" VerticalAlignment="Top"/>
            <ComboBox x:Name="ProducerComboBox" Grid.Row="5" Grid.Column="1" Style="{StaticResource EditorComboBoxStyle}" Margin="0,0,0,16" VerticalAlignment="Top"
                      ItemsSource="{Binding Producers}" DisplayMemberPath="Name" SelectedItem="{Binding SelectedProducer, ValidatesOnDataErrors=True}"/>

            <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Cancel" IsCancel="True" Margin="0,0,12,0" Style="{StaticResource ActionButtonStyle}"/>
                <Button Content="Save" Click="Save_Click" Style="{StaticResource PrimaryActionButtonStyle}" Width="80"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>