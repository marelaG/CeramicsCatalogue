<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net9.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <RootNamespace>GancewskaKerebinska.CeramicsCatalogue.UI.WPF</RootNamespace>
    </PropertyGroup>

    <ItemGroup>
      <ProjectReference Include="..\BL\BL.csproj" />
      <ProjectReference Include="..\Interfaces\Interfaces.csproj" />
    </ItemGroup>

    <Target Name="CopyDAO" AfterTargets="Build">
        <Copy SourceFiles="$(SolutionDir)DAO\bin\$(Configuration)\net9.0\DAO.dll" DestinationFolder="$(OutDir)" />
    </Target>

</Project>
